<div class="container">
    <div class="page-header">
        <h1>Liste des Jeux</h1>
        <a href="/jeux/new" class="btn btn-primary">Ajouter un jeu</a>
    </div>

    <div class="cards">
        {{#each games}}
            <div class="card">
                <h2 class="name">{{this.titre}}</h2>
                <p class="meta">{{this.genre}}</p>
                <p style="flex: 1;">{{this.description}}</p>
                <div class="card-actions">
                    <a href="/jeux/{{this.id}}" class="btn-edit">Voir détails</a>
                    {{#if this.featured}}
                        <a href="/jeux/{{this.id}}/unfeature" class="btn btn-secondary">Retirer de la mise en avant</a>
                    {{else}}
                        <a href="/jeux/{{this.id}}/feature" class="btn btn-primary">Mettre en avant</a>
                    {{/if}}
                </div>
            </div>
        {{else}}
            <div class="empty-state">
                <p>Aucun jeu trouvé.</p>
            </div>
        {{/each}}
    </div>
</div>
