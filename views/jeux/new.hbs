<div class="container">
    <h1>Ajouter un nouveau jeu</h1>

    <div class="form-card">
        <form action="/jeux" method="POST">
            <div class="form-group">
                <label for="titre">Titre (max 200 caractères)</label>
                <input type="text" name="titre" id="titre" class="form-input" maxlength="200" required>
            </div>

            <div class="form-group">
                <label for="description">Description (max 2000 caractères)</label>
                <textarea name="description" id="description" class="form-input" rows="4" maxlength="2000"></textarea>
            </div>

            <div class="form-group">
                <label for="genre">Genre</label>
                <select name="genreId" id="genre" class="form-input" required>
                    <option value="">Sélectionner un genre</option>
                    {{#each genres}}
                        <option value="{{this.id}}">{{this.nom}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="editeur">Éditeur</label>
                <select name="editeurId" id="editeur" class="form-input" required>
                    <option value="">Sélectionner un éditeur</option>
                    {{#each editeurs}}
                    <option value="{{this.id}}">{{this.nom}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="dateSortie">Date de sortie</label>
                <input type="date" name="dateSortie" id="dateSortie" class="form-input">
            </div>

            <div class="form-group flex-row-center">
                <input type="checkbox" name="featured" id="featured">
                <label for="featured" class="mb-0">Mettre en avant</label>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Créer le jeu</button>
                <a href="/jeux" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

