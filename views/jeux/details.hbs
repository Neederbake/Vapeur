<div class="container">
    <div class="page-header">
        <div style="display: flex; align-items: center; gap: 1rem;">
            <h1>{{game.titre}}</h1>
            {{#if game.featured}}
                <span class="badge badge-gold">Mis en avant</span>
            {{/if}}
        </div>
        <a href="/jeux" class="btn btn-secondary">Retour à la liste</a>
    </div>

    <div class="form-card">
        <div class="jeu-details">
            <p><strong>Description :</strong> {{game.description}}</p>
            {{!-- {{displayDate ...}} : Utilise le helper 'displayDate' défini dans main.js pour afficher la date joliment --}}
            <p><strong>Date de sortie :</strong> {{displayDate game.dateSortie}}</p>
            {{#if game.genres}}
                <p><strong>Genre :</strong> <a href="/genres/{{game.genres.id}}" class="text-accent">{{game.genres.nom}}</a></p>
            {{else}}
                <p><strong>Genre :</strong> Non spécifié</p>
            {{/if}}
            {{#if game.editeur}}
                <p><strong>Éditeur :</strong> <a href="/editeurs/{{game.editeur.id}}" class="text-accent">{{game.editeur.nom}}</a></p>
            {{/if}}
        </div>

        <div class="form-actions">
            <a href="/jeux/{{game.id}}/edit" class="btn btn-primary">Modifier</a>
            
            {{!-- Formulaire pour la suppression. On utilise POST car HTML ne supporte pas DELETE nativement --}}
            <form action="/jeux/{{game.id}}/delete" method="POST" class="inline-form" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce jeu ?');">
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
        </div>
    </div>
</div>
