{{!-- Détail d'un éditeur : nom, actions (modifier/supprimer) et liste des jeux --}}
<div class="container">
	{{!-- En-tête avec nom de l'éditeur et boutons d'action --}}
	<div class="page-header">
		<h1>{{editeur.nom}}</h1>
		<div class="actions">
			<a href="/editeurs/{{editeur.id}}/edit" class="btn btn-secondary">Modifier</a>
			{{!-- Formulaire de suppression avec confirmation --}}
			<form action="/editeurs/{{editeur.id}}/delete" method="POST" class="inline-form" onsubmit="return confirm('Supprimer cet éditeur ?');">
				<button type="submit" class="btn btn-danger">Supprimer</button>
			</form>
		</div>
	</div>

	{{#if editeur.jeux_publies}}
		<h2>Jeux publiés</h2>
		{{!-- Liste des jeux, chaque titre est cliquable pour voir le détail du jeu --}}
		<ul class="simple-list">
			{{!-- Boucle sur la liste des jeux publiés par cet éditeur --}}
			{{#each editeur.jeux_publies}}
				<li><a href="/jeux/{{this.id}}" class="list-link">{{this.titre}}</a></li>
			{{/each}}
		</ul>
	{{else}}
		<p>Aucun jeu publié pour cet éditeur.</p>
	{{/if}}
</div>
