<div class="container">
    <h1>Modifier l'éditeur</h1>
    
    <form action="/editeurs/{{editeurs.id}}/edit" method="POST" class="form-card">
        <div class="form-group">
            <label for="nom">Nom de l'éditeur *</label>
            <input 
                type="text" 
                id="nom" 
                name="nom" 
                class="form-input" 
                value="{{editeurs.nom}}"
                placeholder="Ex: Ubisoft, Electronic Arts, Activision..."
                required
            >
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
            <a href="/editeurs/{{editeurs.id}}" class="btn btn-secondary">Annuler</a>
        </div>
    </form>
</div>