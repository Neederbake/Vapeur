{{!-- Formulaire de modification d'un éditeur --}}
<div class="container">
    <h1>Modifier l'éditeur</h1>
    
    {{!-- Formulaire POST pour mettre à jour le nom --}}
    <form action="/editeurs/{{editeur.id}}/edit" method="POST" class="form-card">
        <div class="form-group">
            <label for="nom">Nom de l'éditeur * (max 150 caractères)</label>
            {{!-- value="{{editeur.nom}}" : Affiche le nom actuel dans le champ pour qu'on puisse le modifier --}}
            <input 
                type="text" 
                id="nom" 
                name="nom" 
                class="form-input" 
                value="{{editeur.nom}}"
                placeholder="Ex: Ubisoft, Electronic Arts, Activision..."
                maxlength="150"
                required
            >
        </div>

        {{!-- Boutons : enregistrer ou annuler et retourner à la liste --}}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
            <a href="/editeurs" class="btn btn-secondary">Annuler</a>
        </div>
    </form>
</div>