generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Jeux{
  id          Int      @id @default(autoincrement())
  nom         String
  description String
  createdAt   DateTime @default(now())
  editor      String @default("")
  hilighted   Boolean @default(false)

  editeur     Editeurs?  @relation(fields: [editeurId], references: [id])
  editeurId   Int?   
  genres      JeuxGenres[]
}


model Genres{
  id        Int      @id @default(autoincrement())
  nom       String   @unique

  jeux  JeuxGenres[]
}


model JeuxGenres {
  jeu     Jeux @relation(fields: [jeuId], references: [id], onDelete: Cascade)
  jeuId   Int

  genre   Genres    @relation(fields: [genreId], references: [id], onDelete: Cascade)
  genreId Int

  @@id    ([jeuId, genreId])
}


model Editeurs{
  id        Int      @id @default(autoincrement())
  nom       String

  jeux_publies Jeux[]
}